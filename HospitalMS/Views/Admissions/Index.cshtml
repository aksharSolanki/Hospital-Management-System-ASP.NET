@model IEnumerable<HospitalMS.Models.Admission>

@{
    ViewBag.Title = "Admissions and Discharge Page";
}

<h2>Admissions and Discharge</h2>

<div style="float: left">
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("View All", "Index")
</div>

<div style="float: right">
    @using (Html.BeginForm("Index", "Admissions", FormMethod.Post))
    {
        @Html.Label("search", "Search by")<span>&nbsp;</span>
        @Html.TextBox("search", "", new { placeholder = "Patient or Admissions Date", title = "Enter patient Name or Date 'MM-yyyy' e.g. '12-2022'"})
        <input type="submit" value="Search" />
    }
</div>
<div>&nbsp;</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdmissionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DischargeDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DischargeDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No Patients found.</td>
        </tr>
    }

</table>
