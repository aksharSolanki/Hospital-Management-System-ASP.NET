@model IEnumerable<HospitalMS.Models.TypeOfDoctor>

@{
    ViewBag.Title = "Type of Doctors Page";
}

<h2>Type of Doctors</h2>

<div style="float: left">
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("View All", "Index")
</div>

<div style="float: right">
    @using (Html.BeginForm("Index", "TypeOfDoctors", FormMethod.Post))
    {
        @Html.Label("search", "Search by")<span>&nbsp;</span>
        @Html.TextBox("search", "", new { placeholder = "Name or Description" })
        <input type="submit" value="Search" />
    }
</div>
<div>&nbsp;</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No match was found.</td>
        </tr>
    }

</table>
